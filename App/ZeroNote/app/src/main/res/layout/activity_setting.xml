<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways|snap">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolbar"
        android:fitsSystemWindows="true"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/deep_red"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:id="@+id/setting_back"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/back_small" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:background="@color/deep_red"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/setting_user"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:id="@+id/setting_username"
            android:text="这是用户名"
            android:layout_below="@id/setting_user"
            android:layout_centerHorizontal="true"
            android:textColor="#fbfbf7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/setting_mobile"
            android:textSize="12sp"
            android:text="这是用户名手机或者邮箱"
            android:layout_below="@id/setting_username"
            android:layout_centerHorizontal="true"
            android:textColor="#fbfbf7"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/setting_user_infro"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/admin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16sp"
                    android:textColor="#0a0000"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="账户信息"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/setting_photo"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/picture_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16sp"
                    android:textColor="#0a0000"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="图片"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/setting_note_class"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/file_black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16sp"
                    android:textColor="#0a0000"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="笔记本"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/setting_note"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/books"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16sp"
                    android:textColor="#0a0000"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="笔记"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/setting_notice"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/notice"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16sp"
                    android:textColor="#0a0000"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="通知"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/setting_share"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/share2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16sp"
                    android:textColor="#0a0000"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="分享笔记"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/setting_privace"
                android:layout_height="60dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/password"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="16sp"
                    android:textColor="#0a0000"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="隐私设置"/>
            </LinearLayout>

        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>